{
  "name": "starter",
  "scripts": {
    "build": "npm run compile && npm run compress && npm run copy",
    "clean": "rm -rv ./dist/*",
    "compile:scripts": "webpack ./src/scripts/main.js ./dist/scripts/main.js",
    "compile:styles": "node-sass ./src/styles/main.scss ./dist/styles/main.css --source-map-embed",
    "compile": "npm run compile:scripts && npm run compile:styles",
    "compress:images": "imagemin ./src/images/* --out-dir=./dist/images",
    "compress:scripts": "uglifyjs ./dist/scripts/main.js > ./dist/scripts/main.min.js",
    "compress:styles": "cleancss ./dist/styles/main.css > ./dist/styles/main.min.css",
    "compress": "npm run compress:images && npm run compress:scripts && npm run compress:styles",
    "copy": "cp -v ./src/* ./dist || true",
    "serve": "npm run watch | http-server ./dist -s",
    "watch:scripts": "npm run compile:scripts -- -w",
    "watch:styles": "npm run compile:styles -- -w",
    "watch": "npm run watch:scripts | npm run watch:styles"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.17.5",
    "clean-css": "^3.4.20",
    "eslint-config-airbnb-base": "^9.0.0",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint": "^3.9.1",
    "http-server": "^0.9.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.10.1",
    "uglify-js": "^2.7.4",
    "webpack": "^2.1.0-beta.25"
  },
  "engines": {
    "node": ">=5.0.0"
  }
}
