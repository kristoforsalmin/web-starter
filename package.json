{
  "scripts": {
    "build": "npm run clean && npm run lint && npm run process && npm run copy",
    "clean": "rm -rfv ./dist",
    "copy:fonts": "cp -rv ./src/fonts ./dist",
    "copy:static": "cp -v ./src/* ./dist || true",
    "copy": "npm run copy:fonts && npm run copy:static",
    "lint:scripts": "eslint ./src/scripts/**/*.js",
    "lint:styles": "stylelint ./src/styles/**/*.css",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "process:images": "imagemin -o ./dist/images ./src/images/*",
    "process:scripts": "webpack ./src/scripts/main.js ./dist/scripts/main.js",
    "process:styles": "postcss -c ./postcss.config.js -d ./dist/styles ./src/styles/*.css",
    "process": "npm run process:images && npm run process:scripts && npm run process:styles",
    "serve": "concurrently -r \"npm run watch\" \"browser-sync start -s ./dist -f ./dist --no-notify\"",
    "watch:scripts": "npm run process:scripts -- -w",
    "watch:static": "sane --glob=src/* \"npm run copy:static\"",
    "watch:styles": "npm run process:styles -- -w",
    "watch": "concurrently -r \"npm run watch:scripts\" \"npm run watch:static\" \"npm run watch:styles\""
  },
  "dependencies": {
    "suitcss-base": "^2.0.0",
    "suitcss-components-grid": "^3.0.3",
    "suitcss-utils": "^2.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "browser-sync": "^2.18.8",
    "concurrently": "^3.3.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint": "^3.16.1",
    "imagemin-cli": "^3.0.0",
    "postcss-cli": "^2.6.0",
    "postcss-csso": "^1.1.2",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "sane": "^1.6.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint": "^7.9.0",
    "webpack": "^2.2.1"
  },
  "engines": {
    "node": ">=5.0.0"
  },
  "private": true
}
