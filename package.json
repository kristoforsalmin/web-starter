{
  "name": "starter",
  "scripts": {
    "build:images": "imagemin ./src/images/* --out-dir=./dist/images",
    "build:scripts": "webpack ./src/scripts/main.js ./dist/scripts/main.js",
    "build:styles": "node-sass ./src/styles/main.scss ./dist/styles/main.css --source-map-embed",
    "build": "npm run build:images && npm run build:scripts && npm run build:styles",
    "clean": "rm -rv ./dist/*",
    "copy": "cp -v ./src/* ./dist || true",
    "serve": "npm run watch | http-server ./dist -s",
    "watch:scripts": "npm run build:scripts -- -w",
    "watch:styles": "npm run build:styles -- -w",
    "watch": "npm run watch:scripts | npm run watch:styles"
  },
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.17.5",
    "eslint-config-airbnb-base": "^9.0.0",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint": "^3.8.1",
    "http-server": "^0.9.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.10.1",
    "webpack": "^2.1.0-beta.25"
  },
  "engines": {
    "node": ">=5.0.0"
  }
}
